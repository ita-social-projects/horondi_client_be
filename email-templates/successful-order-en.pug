extends template-en
block headerText
    h1.responseTitle Your order has been successfully processed
block subheaderText
    h1.desktopTitle Your order has been successfully processed
block content
    div.contentWrapper
        table.productTable
            tr.tableHead
                th.product Product
                th.size Size
                th.price Price
                th.quantity Quantity
                th.total Total
            tr.tableBody
                td.product
                    div.productWrapper
                        img.productImg(src=`img/backpack.png` alt='img')
                        div.productInfo
                            p.productTitle Rolltop black
                            p.productMaterial Bottom material: Corduraypa
                            p.productSizeResponsive Size: M
                td.size
                    p.productSize M
                td.price
                    p.productPrice $50
                td.quantity
                    p.productQuantity 1
                td.total
                    p.productTotal $50
        div.payment
            span.paymentText Total
            span.paymentPrice $50
        p.text Thank you for always being with us!
        button.continue
            a(href=`${frontendUrl}/catalog/products?sort=popularity`) continue shopping




