extends template-en
block headerText
    h1.responseTitle Your HORONDI Certificate
block subheaderText
    h1.desktopTitle Your HORONDI Certificate
block content
    div.contentWrapper
        each item in items
            p.text Congratulations! #[br] You have successfully purchased the gift certificate HORONDI â„–#[strong !{item.name}] for !{item.value} UAH. You can view your certificates on our #[a(href=frontendUrl + `/my-certificates/`) website.]
                div.continerImg
                    div.shadow
                        img.certificate(src=`https://horondi.blob.core.windows.net/horondi/images/certificate-${item.value}.png`)
            p.listHeader #[strong Pay attention!]
            ol.bestWishes
                li The gift certificate provides #[strong a discount on any Horondi product.]
