extends template-en
block styles 
    link(rel="stylesheet", href="css/confirm-email.css")
block subheaderText
    p.registrationText You have uncompleted purchases
block content
    div.contentRegistrationText
        div.productTableContent
            table.productTable
                caption= `До сплати: ${totalPrice[0].value}  ${totalPrice[0].currency}`
                tr.tableHead
                    th Photo
                    th Name
                    th Quantity
                    th Price
                each val in items
                    if val.product
                        tr.tableBody
                            td
                                img.tableImg(src= `${imagesUrl}${val.product.images.primary.large}`)
                            td 
                                p= val.product.name[0].value
                                p= `Size - ${val.options.size.name}`
                            td= val.quantity
                            td= `${val.price[0].value} ${val.price[0].currency}`
                    else if val.fromConstructor
                        tr.tableBody
                            td
                                img.tableImg(src= `${imagesUrl}large_21r21sdeokmxcw0i8_Rolltop_blue.png`)
                            td 
                                p= val.fromConstructor.product.name[0].value
                                p= `Size - ${val.options.size.name}`
                            td= val.quantity
                            td= `${val.price[0].value} ${val.price[0].currency}`
            
            p.congrats Please, complete your purchases
            button.confirm
                a(href=`${frontendUrl}/cart`) COMPLETE PURCHASES
            p.operationsLink or follow the link below:
            a.aoperationsLink(href= `${frontendUrl}/cart`) #{`${frontendUrl}/cart`}