{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "ignorePatterns": [
    "modules/payment/*.js",
    "typeDefs.js",
    "resolvers.js",
    "server.js",
    "consts/*.js",
    "helpers/**/*.js",
    "migrations/*.js",
    "models/*.js",
    "modules/questions-answers/*.js",
    "modules/restriction/*.js",
    "modules/size/*.js",
    "modules/strap/*.js",
    "tests/back/*.js",
    "tests/basics/*.js",
    "tests/bottom/*.js",
    "tests/business-text/*.js",
    "tests/strap/*.js",
    "tests/translations/*.js",
    "tests/upload/*.js",
    "tests/user/*.js",
    "currency.worker.js",
    "dotenvValidator.js",
    "dump-database.js",
    "jest.config.js",
    "logger.js",
    "loggerHttp.js",
    "migrate-mongo-config.js",
    "permissions.js"
  ],
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      1,
      {
        "endOfLine": "auto"
      }
    ],
    "no-self-compare": 2,
    "array-callback-return": 2,
    "no-use-before-define": 2,
    "no-duplicate-imports": 2,
    "no-template-curly-in-string": 2,
    "no-return-assign": 2,
    "no-restricted-syntax": [
      2,
      "ForInStatement",
      "LabeledStatement",
      "WithStatement"
    ],
    "prefer-const": [
      2,
      {
        "destructuring": "all"
      }
    ],
    "arrow-body-style": [2, "as-needed"],
    "no-console": [
      2,
      {
        "allow": ["warn", "error"]
      }
    ],
    "no-unused-vars": [
      2,
      {
        "argsIgnorePattern": "_"
      }
    ],
    "newline-before-return": 2,
    "no-unneeded-ternary": 2,
    "prefer-arrow-callback": 1,
    "prefer-template": 2,
    "no-underscore-dangle": [
      2,
      {
        "allow": ["_id", "_ID", "_doc"]
      }
    ],
    "no-return-await": 1,
    "no-useless-return": 2,
    "no-eval": 2,
    "no-negated-condition": 1,
    "no-var": 2,
    "operator-assignment": [1, "always"],
    "yoda": 2,
    "max-depth": [
      1,
      {
        "max": 4
      }
    ],
    "no-else-return": [
      2,
      {
        "allowElseIf": true
      }
    ],
    "no-shadow": 2,
    "eqeqeq": [2, "always"],
    "curly": 2,
    "prefer-destructuring": [
      1,
      {
        "VariableDeclarator": {
          "array": false,
          "object": true
        },
        "AssignmentExpression": {
          "array": true,
          "object": false
        }
      }
    ],
    "no-extend-native": 2,
    "linebreak-style": [1, "windows"],
    "lines-between-class-members": [1, "always"],
    "max-len": [
      2,
      {
        "code": 150,
        "ignoreComments": true,
        "ignoreUrls": true
      }
    ],
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ]
  }
}
